{
  "realm": "ecommerce",
  "enabled": true,
  "displayName": "E-Commerce Platform",
  "sslRequired": "external",
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 5,
  "accessTokenLifespan": 900,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "defaultSignatureAlgorithm": "RS256",
  "roles": {
    "realm": [
      {
        "name": "customer",
        "description": "Regular customer role"
      },
      {
        "name": "seller",
        "description": "Seller/Vendor role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      }
    ],
    "client": {
      "ecommerce-web": [
        {
          "name": "user",
          "description": "Basic user access"
        }
      ],
      "ecommerce-admin": [
        {
          "name": "admin",
          "description": "Admin dashboard access"
        }
      ]
    }
  },
  "groups": [
    {
      "name": "Customers",
      "path": "/Customers",
      "realmRoles": ["customer"]
    },
    {
      "name": "Sellers",
      "path": "/Sellers",
      "realmRoles": ["seller"]
    },
    {
      "name": "Administrators",
      "path": "/Administrators",
      "realmRoles": ["admin"]
    }
  ],
  "clients": [
    {
      "clientId": "ecommerce-web",
      "name": "E-Commerce Web Application",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "redirectUris": [
        "http://localhost:3000/*",
        "https://ecommerce.example.com/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "https://ecommerce.example.com"
      ],
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email",
        "openid"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access"
      ],
      "protocolMappers": [
        {
          "name": "user-id-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "user.attribute": "id",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "user_id",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "clientId": "ecommerce-mobile",
      "name": "E-Commerce Mobile Application",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "redirectUris": [
        "ecommerce://callback",
        "exp://localhost:8081/*"
      ],
      "webOrigins": ["+"],
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email",
        "openid"
      ]
    },
    {
      "clientId": "ecommerce-admin",
      "name": "E-Commerce Admin Dashboard",
      "enabled": true,
      "publicClient": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "secret": "admin-client-secret-change-in-production",
      "redirectUris": [
        "http://localhost:3001/*",
        "https://admin.ecommerce.example.com/*"
      ],
      "webOrigins": [
        "http://localhost:3001",
        "https://admin.ecommerce.example.com"
      ],
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email",
        "openid"
      ]
    },
    {
      "clientId": "user-service",
      "name": "User Microservice",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "secret": "user-service-secret-change-in-production"
    },
    {
      "clientId": "product-service",
      "name": "Product Microservice",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "secret": "product-service-secret-change-in-production"
    },
    {
      "clientId": "order-service",
      "name": "Order Microservice",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "secret": "order-service-secret-change-in-production"
    },
    {
      "clientId": "kong-gateway",
      "name": "Kong API Gateway",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "secret": "kong-gateway-secret-change-in-production"
    }
  ],
  "clientScopes": [
    {
      "name": "ecommerce-api",
      "description": "E-Commerce API scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "ecommerce-web",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@ecommerce.example.com",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": true
        }
      ],
      "realmRoles": ["admin"],
      "groups": ["/Administrators"]
    },
    {
      "username": "testuser",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "User",
      "email": "test@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "test123",
          "temporary": false
        }
      ],
      "realmRoles": ["customer"],
      "groups": ["/Customers"]
    }
  ],
  "smtpServer": {},
  "eventsEnabled": true,
  "eventsListeners": ["jboss-logging"],
  "enabledEventTypes": [
    "LOGIN",
    "LOGIN_ERROR",
    "LOGOUT",
    "REGISTER",
    "REGISTER_ERROR",
    "CODE_TO_TOKEN",
    "CODE_TO_TOKEN_ERROR"
  ],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true
}
